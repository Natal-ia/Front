<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JaveFamilia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentacion.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">JaveFamilia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" asp-area="" asp-page="/Utilities/Signup/Signup">SignUp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" asp-area="" asp-page="/Utilities/Login/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    /* Estilo general de los elementos */
.space-item {
    padding: 2vw;   
    margin: 2vw 0;
    border-radius: 1vw;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    transition: 0.3s;
}

/* Navbar button styles */
.navbar-nav .nav-item .nav-link {
    padding: 0.5vw 1vw;
    border-radius: 1vw;
    font-weight: bold;
    margin: 0 0.5vw;
    text-align: center;
    transition: all 0.3s ease;
}

.btn-primary {
    background-color: #B5EAEA;
    color: black;
    border: 0.1vw solid #B5EAEA;
}

.btn-primary:hover {
    background-color: #D1F2E0;
    border-color: transparent;
    color: black;
}

.btn-secondary {
    background-color: var(--background-color);
    color: black;
    border: 0.1vw solid #B5EAEA;
}

.btn-secondary:hover {
    background-color: #B5EAEA;
    color: white;
}

/* Barra de búsqueda */
.search-bar {
    border-radius: 1vw;
    border-style: none;
    background-color: #b5eaea80;
    padding: 0.5vw;
    margin-bottom: 1vw;
    margin-top: 1vw;
    border: #B5EAEA 0.2vw solid;
    width:100% !important;
    font-size: 1.2vw;
    transition: box-shadow 0.3s ease;
}

.search-bar:focus {
    box-shadow: 0 0 10px #B5EAEA;
    outline: none;
}

</style>