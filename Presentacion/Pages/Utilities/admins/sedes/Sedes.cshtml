@page "/sedes"
@model SedeModel
@{
    ViewData["Title"] = "Registrar Nueva Sede";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="container p-5">
        <div class="card shadow-sm p-4 rounded">
            <div class="text-center mb-4">
                <h2 class="h4 font-weight-bold">Registrar Nueva Sede</h2>
            </div>

            <!-- Mostrar mensajes de error generales -->
            @if (!ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Formulario de registro de sede -->
            <form method="post">
                <div class="form-group mb-3">
                    <label for="Id" class="text-muted">ID</label>
                    <input id="Id" name="Id" class="form-control" asp-for="Id" required />
                    <span class="text-danger" asp-validation-for="Id"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Name" class="text-muted">Nombre</label>
                    <input id="Name" name="Name" class="form-control" asp-for="Name" required />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Address" class="text-muted">Dirección</label>
                    <input id="Address" name="Address" class="form-control" asp-for="Address" required />
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="PhoneNumber" class="text-muted">Teléfono</label>
                    <input id="PhoneNumber" name="PhoneNumber" class="form-control" asp-for="PhoneNumber" required />
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="City" class="text-muted">Ciudad</label>
                    <input id="City" name="City" class="form-control" asp-for="City" required />
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Registrar Sede</button>
            </form>
        </div>
        <div class="d-flex justify-content-between mt-4 text-muted">
            <span>Help</span>
            <span>Privacy</span>
            <span>Terms</span>
        </div>
    </div>
</div>
