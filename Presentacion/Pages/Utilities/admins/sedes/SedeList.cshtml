@page "/listar-sedes"
@model SedeListModel
@{
    ViewData["Title"] = "Lista de Sedes";
}


<div class="container mt-5">
    <h1 class="mb-4">Lista de Sedes</h1>

    <!-- Mostrar mensajes de error generales -->
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <!-- Tabla de sedes -->
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Ciudad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sede in Model.Sedes)
            {
                <tr>
                    <td>@sede.id</td>
                    <td>@sede.name</td>
                    <td>@sede.address</td>
                    <td>@sede.phoneNumber</td>
                    <td>@sede.city</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@sede.id" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
