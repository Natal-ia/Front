@page "/signup"
@model SignupModel
@{
    ViewData["Title"] = "Bienvenido a JaveFamilia";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-white">
    <div class="container p-5">
        <div class="card shadow-sm p-4 rounded">
            <div class="text-center mb-4">
                <div class="rounded-circle bg-secondary mx-auto mb-3" style="width: 48px; height: 48px;"></div>
                <h2 class="h4 font-weight-bold">Create an account</h2>
                <p class="text-muted">
                    Already have an account? <a href="/login" class="text-decoration-underline">Log in</a>
                </p>
            </div>

            <!-- Mostrar mensajes de error generales -->
            @if (!ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Formulario de registro -->
            <form method="post">
                <div class="form-row mb-3">
                    <div class="col">
                        <label for="FirstName" class="text-muted">First name</label>
                        <input id="FirstName" name="FirstName" class="form-control" asp-for="FirstName" required />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col">
                        <label for="LastName" class="text-muted">Last name</label>
                        <input id="LastName" name="LastName" class="form-control" asp-for="LastName" required />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="Email" class="text-muted">Email address</label>
                    <input id="Email" name="Email" type="email" class="form-control" asp-for="Email" required />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Birthday" class="text-muted">Birthday</label>
                    <input id="Birthday" name="Birthday" type="date" class="form-control" asp-for="Birthday" required />
                    <span class="text-danger" asp-validation-for="Birthday"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="PhoneNumber" class="text-muted">Phone Number</label>
                    <input id="PhoneNumber" name="PhoneNumber" type="text" class="form-control" asp-for="PhoneNumber" required />
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="TipoDocumento" class="text-muted">Tipo de Documento</label>
                    <select id="TipoDocumento" name="TipoDocumento" class="form-control" asp-for="TipoDocumento" required>
                        <option value="CC">Cédula de Ciudadanía (CC)</option>
                        <option value="TI">Tarjeta de Identidad (TI)</option>
                        <option value="CE">Cédula de Extranjería (CE)</option>
                        <option value="NIT">Cédula de Extranjería (CE)</option>

                    </select>
                    <span class="text-danger" asp-validation-for="TipoDocumento"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Document" class="text-muted">Document Number</label>
                    <input id="Document" name="Document" type="text" class="form-control" asp-for="Document" required />
                    <span class="text-danger" asp-validation-for="Document"></span>
                </div>
                <div class="form-row mb-3">
                    <div class="col">
                        <label for="Password" class="text-muted">Password</label>
                        <input id="Password" name="Password" type="password" class="form-control" asp-for="Password" required />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="col">
                        <label for="ConfirmPassword" class="text-muted">Confirm your password</label>
                        <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" asp-for="ConfirmPassword" required />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                <small class="form-text text-muted mb-3">
                    Use 8 or more characters with a mix of letters, numbers & symbols
                </small>
                <button type="submit" class="btn btn-dark btn-block">Sign Up</button>
            </form>
        </div>
        <div class="d-flex justify-content-between mt-4 text-muted">
            <span>Help</span>
            <span>Privacy</span>
            <span>Terms</span>
        </div>
    </div>
</div>
