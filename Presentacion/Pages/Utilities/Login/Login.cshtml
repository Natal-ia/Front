@page "/login"
@model LoginModel
@{
    ViewData["Title"] = "Bienvenido de nuevo a JaveFamilia";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light py-5">
    <div class="card shadow" style="max-width: 400px;">
        <div class="card-body p-4 text-center">
            <div class="rounded-circle bg-dark mx-auto mb-4" style="width: 60px; height: 60px;"></div>
            <h1 class="h4 font-weight-bold text-dark mb-3">Log in to your account</h1>
            <p class="text-muted small mb-4">
                Don't have an account? <a href="/signup" class="text-primary">Sign up</a>
            </p>

            <!-- Formulario de login -->
            <form method="post">
                <div class="form-group mb-3">
                    <label for="Email" class="text-muted small">Email address</label>
                    <input id="Email" name="Email" type="email" class="form-control" asp-for="Email" required />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Password" class="text-muted small">Password</label>
                    <input id="Password" name="Password" type="password" class="form-control" asp-for="Password" required />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </form>

            <div class="mt-3">
                <a href="/forgot-password" class="text-muted small">Forgot password?</a>
            </div>
        </div>
    </div>
</div>
